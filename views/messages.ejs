<div class="message-wrapper" data-post-id="<%= data[i].id %>">
    <div class="message">
        <div class="message-author-city-time">
            <div>
                <span> <%= data[i].userName %> |</span>
                <span> <%= data[i].address %>  </span>
            </div>
            <span> <%= data[i].time %> </span>
        </div></br>
        <div class="breaking-line" ></div>
        <div class="text-container" >
            <span >
                <%= data[i].text %>
            </span>
        </div>
              <% if(data[i].photoLinks.length > 4){ %>
              <% let morePhoto = data[i].photoLinks.length - 4  %>
                 <div class="morePhotoBtn">
                   <span> Show more photo (<%= morePhoto %>) </span>
                 </div>
               <% } else{ %>
              <% } %>


            <% if(data[i].photoLinks.length > 1){ %>
          <div class="photos">
              <% if(data[i].photoLinks.length == 2){ %>
              <div class="photo-slot _1---1-1" style="background-image: url(<%= '../' + data[i].photoLinks[1]%>)"> </div>
              <% } else if(data[i].photoLinks.length == 3){ %>
              <div class="photo-slot _1---1-2" style="background-image: url(<%= '../' + data[i].photoLinks[1]%>)"> </div>
              <div class="photo-slot _2---1-2" style="background-image: url(<%= '../' + data[i].photoLinks[2]%>)"> </div>
              <% } else { %>
                <div class="photo-slot _1---1-3" style="background-image: url(<%= '../' + data[i].photoLinks[1]%>)"> </div>
                <div class="photo-slot _2---1-3" style="background-image: url(<%= '../' + data[i].photoLinks[2]%>)"> </div>
                <div class="photo-slot _3---1-3" style="background-image: url(<%= '../' + data[i].photoLinks[3]%>)"> </div>
              <% } %>
            <!-- <div class="delete-photo-btn-wrapper1"> <div class="delete-photo-btn"></div></div>
            <div class="delete-photo-btn-wrapper2"> <div class="delete-photo-btn"></div></div>
            <div class="delete-photo-btn-wrapper3"> <div class="delete-photo-btn"></div></div> -->
            <!-- <img class="photo-slot2" src="../imgs/close.png">
            <img class="photo-slot1" src="../imgs/add.png">
            <img class="photo-slot3" src="../imgs/policemen1.jpg"> -->

            <!-- <div class="photo-slot2"> </div> -->
            <!-- <div class="photo-slot3"> </div> -->
          </div>
          <% } else {} %>



    </div>
</div>
